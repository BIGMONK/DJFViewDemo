<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BorderedImageView">
        <!--边框宽度-->
        <attr name="borderWidth" format="dimension" />
        <!--边框颜色-->
        <attr name="borderColor" format="color" />
        <!--控件形状-->
        <attr name="shap" format="enum">
            <!--圆形-->
            <enum name="circle" value="1" />
            <!--矩形-->
            <enum name="rectangle" value="2" />
        </attr>
        <!---->
        <attr name="corner" format="dimension" />
        <attr name="leftTopCorner" format="dimension" />
        <attr name="leftBottomCorner" format="dimension" />
        <attr name="rightTopCorner" format="dimension" />
        <attr name="rightBottomCornet" format="dimension" />
    </declare-styleable>
</resources>